# vim: set syntax=gitconfig

[user]
	name = Willington Vega
	email = wvega@wvega.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	filemode = true
    pager = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[interactive]
    diffFilter = diff-so-fancy --patch
[merge]
	tool = opendiff
[diff]
	compactionHeuristic = true
[diff-so-fancy]
	markEmptyLines = true
	changeHunkIndicators = true
	stripLeadingSymbols = true
[color]
	ui = true
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[include]
    path = ~/.git.d/alias.gitconfig
[include]
    path = ~/.git.d/work.gitconfig
